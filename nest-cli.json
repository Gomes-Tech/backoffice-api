{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "plugins": [
      {
        "name": "@nestjs/swagger/plugin"
      }
    ],
    "assets": [
      {
        "include": "../templates/**/*",
        "outDir": "dist/templates"
      }
    ]
  }
}
